inherit gst-plugins cvs

PKG_NAMES="${PN} libgstgl${PV_MAJ_MIN} libgstgl${PV_MAJ_MIN}-devel"
PKG_HINTS="setup lib devel"
PKG_CONTENTS[0]="${GST_PLUGINDIR#/}/ usr/share/doc/ usr/share/locale/"
PKG_CONTENTS[1]="usr/bin/*.dll"
PKG_CONTENTS[2]="usr/include/ usr/lib/lib* usr/lib/pkgconfig/"

CYGPORT_USE_UNSTABLE_API=1
src_unpack_hook() {
	rm -fr common/
	gstreamer_cvs_checkout common
}
